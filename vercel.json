{
  "version": 2,
  "name": "chhupa-hua-bharat",
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/enhanced-podcasts.html",
      "dest": "/enhanced-podcasts.html"
    },
    {
      "src": "/enhanced-ebooks.html", 
      "dest": "/enhanced-ebooks.html"
    },
    {
      "src": "/articles/(.*)",
      "dest": "/articles/$1"
    },
    {
      "src": "/about/(.*)",
      "dest": "/about/$1"
    },
    {
      "src": "/contact/(.*)",
      "dest": "/contact/$1"
    },
    {
      "src": "/podcasts/(.*)",
      "dest": "/podcasts/$1"
    },
    {
      "src": "/ebooks/(.*)",
      "dest": "/ebooks/$1"
    },
    {
      "src": "/blog/(.*)",
      "dest": "/blog/$1"
    },
    {
      "src": "/membership/(.*)",
      "dest": "/membership/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
